<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
    <item>
        <shape android:shape="oval">
            <gradient
                    android:startColor="@color/btnBackgroundLight"
                    android:endColor="@color/btnBackgroundDark"
                    android:angle="270"/>
        </shape>
    </item>
    <item
            android:bottom="6dip"
            android:top="6dip"
            android:left="9dip"
            android:right="9dip">
        <shape android:shape="oval">
            <stroke
                    android:color="@color/btnBackgroundLight"
                    android:width="2dip"/>
            <gradient
                    android:startColor="@color/btnBackgroundDark"
                    android:endColor="@color/btnBackgroundLight"
                    android:angle="270"/>
        </shape>
    </item>
</layer-list>